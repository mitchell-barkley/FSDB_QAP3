<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <style type="text/css">
            body {
                display: flex;
                flex-direction: column;
                align-items: center;
                font-family: Arial, sans-serif;
                width: 100%;
            }
        </style>
        <%- include('../partials/nav.ejs') %>
        <div class="menu content">
            <form action="/menu" method="POST">
                <h1><b>Menu:</b></h1><br>
            <% if (theMenu.length > 0) { %>
                <% theMenu.forEach(menu => { %>
                    <p><h3><%= menu.pizza_name %>&nbsp;&bull;&nbsp;<%= menu.price %></h3>
                    <ul>
                        <li><%= menu.sauce %>,&nbsp;<%= menu.cheese %></li>
                        <li><%= menu.topping1 %>,&nbsp;<%= menu.topping2 %>,&nbsp;<%= menu.topping3 %>,&nbsp;
                        <%= menu.topping4 %>,&nbsp;<%= menu.topping5 %>,&nbsp;<%= menu.topping6 %></li>
                    </ul>
                    </p>
                    <a href="/menu/<%=menu.id%>edit?id=<%=menu.id%>">edit</a>
                    <a href="/menu/<%=menu.id%>delete?id=<%=menu.id%>">delete</a>
            <% }) %>
        </div>
    <% } %>
            <br><label>Add Menu Item:</label><br>
            <label>Price:
                <input type="text" id="price" name="price" value="<%= locals.price %>" required>
            </label>
            <label>Pizza Name:
                <input type="text" id="pizza_name" name="pizza_name" value="<%= locals.pizza_name %>" required>
            </label>
            <label>Sauce:
                <input type="text" id="sauce" name="sauce" value="<%= locals.sauce %>" required>
            </label>
            <label>Cheese:
                <input type="text" id="cheese" name="cheese" value="<%= locals.cheese %>" required>
            </label>
            <label>Topping1:
                <input type="text" id="topping1" name="topping1" value="<%= locals.topping1 %>">
            </label>
            <label>Topping2:
                <input type="text" id="topping2" name="topping2" value="<%= locals.topping2 %>">
            </label>
            <label>Topping3:
                <input type="text" id="topping3" name="topping3" value="<%= locals.topping3 %>">
            </label>
            <label>Topping4:
                <input type="text" id="topping4" name="topping4" value="<%= locals.topping4 %>">
            </label>
            <label>Topping5:
                <input type="text" id="topping5" name="topping5" value="<%= locals.topping5 %>">
            </label>
            <label>Topping6:
                <input type="text" id="topping6" name="topping6" value="<%= locals.topping6 %>">
            </label>
            <br>
            <button>Add to Menu</button>
            </form>
        </div>
    </body>
    <%- include('../partials/foot.ejs') %>
</html>